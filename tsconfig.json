{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "dom",
      "es2021"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "target": "es2022",
      "module": "es2022"
    }
  }
}

